@model Fusion.Models.ReportViewModels.MiscReports
@{
    ViewBag.Title = "CAO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отчет по картам, которые проводятся только на суммы свыше определенной</h2>

<div class="alert alert-info" style="overflow:hidden">
    <p>Не учитываются начисления/списания, выполненные вручную администратором либо менеджером "Море плюсов"</p>
</div>

<div style="margin: 10px 0; border:none;" class="alert alert-info">
    @using (Html.BeginForm("CAO", "CRM", FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="col-xs-2">
            @Html.TextBoxFor(m => m.Summ, new { @class = "form-control", @style = "width: 150px" })
        </div>
        <div class="col-xs-2">
            @Html.TextBoxFor(m => m.StartDateTime, "{0:dd.MM.yyyy}", new { @class = "form-control date", @style = "width: 150px" })
        </div>
        <div class="col-xs-2">
            <!-- а здесь ты выведи поле конец периода, он должен быть датой -->
            @Html.TextBoxFor(m => m.EndDateTime, "{0:dd.MM.yyyy}", new { @class = "form-control date", @style = "width: 150px" })
        </div>
        <input type="submit" value="Поиск" class="btn btn-default" />
    }
</div>
<table class="table table-bordered table-striped">
    @foreach (var s in Model.Data)
    {
        <tr>
            @foreach (var s1 in s)
            {
                <td>@s1</td>
            }
        </tr>
    }
</table>